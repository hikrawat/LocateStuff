<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ritambhara.rememberstuff"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />
            
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings">
           
        </activity>
        
        <activity
            android:name=".FacebookLoginActivity"
            android:label="@string/action_fblogin">
        </activity>
        
        <activity
            android:name=".AddStuffActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/add_stuff_activity_title">
           
        </activity>
        
        <activity
            android:name=".FullScreenViewActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar">
        </activity>
        
        <activity
            android:name=".FullScreenVideoActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar">
        </activity>
        
        <activity    
            android:name=".AudioRecordActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar">
        </activity>
        
        <activity
            android:name="com.facebook.LoginActivity"
            android:theme="@style/AppTheme" >
        </activity>
    </application>


    
</manifest>
