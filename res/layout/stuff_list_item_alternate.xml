<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:orientation="horizontal"
    tools:context="com.ritambhara.rememberstuff.MainActivity" >
    <!--  This is how alternate element int he list will be visible-->
    
    <include layout="@layout/stuff_list_item_descr"
	    android:id="@+id/stuffDesrclayout"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/stuffImagelayout"
        />
	<include layout="@layout/stuff_list_item_image"
	    android:id="@+id/stuffImagelayout"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_alignParentRight="true"
        />
    
</RelativeLayout>
